# Ollama Configuration (running on host)
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_MODEL=hf.co/Qwen/Qwen3-Embedding-8B-GGUF
OLLAMA_LLM_MODEL=mistral-small:24b

# Qdrant Configuration (running in container)
QDRANT_URL=http://qdrant:6333
QDRANT_COLLECTION_NAME=brandgpt
QDRANT_VECTOR_SIZE=4096

# Reranker Settings
RERANKER_ENABLED=true
RERANKER_MODEL=BAAI/bge-reranker-large
RERANKER_TOP_K=5
RERANKER_CANDIDATES=20

# Database Configuration
DATABASE_URL=sqlite:///./data/brandgpt.db

# API Configuration
API_HOST=0.0.0.0
API_PORT=9700
API_RELOAD=true

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Scrapy Configuration
MAX_SCRAPE_DEPTH=3
CONCURRENT_REQUESTS=16
DOWNLOAD_DELAY=0.5

# Processing Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_FILE_SIZE_MB=100